{% set elementFilter = elementFilter ?? false %}
{% if elementFilter %}
	{% import "_includes/forms" as forms %}

		{% switch elementFilter.inputType %}

			{% case "select" %}

				<div class="searchit-filter select">
					{{ forms.select({
						options: elementFilter.options
					})}}
				</div>

			{% case "date" %}

				{% set id = 'date'~random()~'-date' %}

				<div class="searchit--filter datewrapper texticon icon" data-icon="date">
					{{ forms.text({
						id: id~'From',
				        autocomplete: false,
				        placeholder: ' ',
				    }) }}
		    	</div>

		    	{%- js %}
			    	$('#{{ (id~'From')|namespaceInputId|e('js') }}').datepicker(Craft.datepickerOptions);
				{%- endjs %}

				{% if elementFilter.settings.type == 'range' %}
					<span class="searchit--filter">to</span>
					<div class="searchit--filter datewrapper texticon icon" data-icon="date">
						{{ forms.text({
							id: id~'To',
					        autocomplete: false,
					        placeholder: ' ',
					    }) }}
			    	</div>

			    	{%- js %}
				    	$('#{{ (id~'To')|namespaceInputId|e('js') }}').datepicker(Craft.datepickerOptions);
					{%- endjs %}

				{% endif %}

		{% endswitch %}

{% endif %}
